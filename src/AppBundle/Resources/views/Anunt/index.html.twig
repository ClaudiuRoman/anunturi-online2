{% extends '::base.html.twig' %}
{# face copy&paste din base.html.twig si extinde anumite blocuri #}

{% block body -%}
    <h1>Anunt list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Createdat</th>
                <th>Ispublished</th>
                <th>Numberofviews</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('anunt_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.price }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isPublished }}</td>
                <td>{{ entity.numberOfViews }}</td>
                {# {{  }}-afiseaza {%  %}-preia/citeste/face actiune,ex:if/for #}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('anunt_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('anunt_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('anunt_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
